#include <iostream> 

using namespace std;

int main() {


	int A[3][4];

	for (int i = 0; i < 3; i++) {
		for (int j = 0; j < 4; j++) {
			cout << "Введіть якесь значення для елементу матриці:";
			cin >> A[i][j];
		}
	}
	cout << "Наша матриця:\n";
	for (int i = 0; i < 3; i++) {
		for (int j = 0; j < 4; j++) {
			cout << A[i][j];

		}
		cout << endl;
	}

	int biggest = A[0][0];
	for (int i = 0; i < 3; i++) {
		for (int j = 0; j < 4; j++) {
			if (biggest < A[i][j]) {
				biggest = A[i][j];
			}
		}
	}
	
	

	cout << "Найбільший елемент матриці = " << biggest << endl;

	int smallest = A[0][0];
	for (int i = 0; i < 3; i++) {
		for (int j = 0; j < 4; j++) {
			if (smallest > A[i][j]) {
				smallest = A[i][j];
			}
		}
	}

	cout << "Найменший елемент матриці = " << smallest;

	return 0;
} 
