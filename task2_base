#include <iostream>

using namespace std;

int main() {

	setlocale(LC_ALL, "UKR");


	int A[3][3];
	int B[3][3];

	for (int i = 0; i < 3; i++) {
		for (int j = 0; j < 3; j++) {
			cout << "Введіть якесь значення для матриці А:";
			cin >> A[i][j];

		}
	}

	for (int i = 0; i < 3; i++) {
		for (int j = 0; j < 3; j++) {
			cout << "Введіть якесь значення для матриці B:";
			cin >> B[i][j];

		}
	}

	cout << "Наша матриця А:\n";
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				cout << A[i][j];

			}
			cout << endl;
		}

		cout << "Наша матриця B:\n";
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				cout << B[i][j];

			}
			cout << endl;
		}

		int j_A = 0;
		int i_B = 1;

		for (int i_A = 0; i_A < 3; i_A++) {
			A[i_A][j_A] = B[i_B][i_A];
		}

	cout << "Наша змінена матриця А:\n";
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				cout << A[i][j];

			}
			cout << endl;
		}


	return 0;
}
